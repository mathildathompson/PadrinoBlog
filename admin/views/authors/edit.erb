<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:authors, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:authors, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:authors, :edit, :id => @author.id) %></li>
</ul>
<div class="tabs-content">
  <% form_for :author, url(:authors, :update, :id => @author.id), :method => :put, :class => 'form-horizontal' do |f| %>
    <%= partial 'authors/form', :locals => { :f => f } %>
  <% end %>
</div>
